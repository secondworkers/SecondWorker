<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--用户评价-->

    <com.qiaoyi.secondworker.view.CircularImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="@dimen/base36dp"
        android:layout_height="@dimen/base36dp"
        android:layout_marginLeft="@dimen/base16dp"
        android:layout_marginTop="@dimen/base29dp"
        android:src="@mipmap/ic_headphoto" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base58dp"
        android:layout_marginTop="@dimen/base32dp"
        android:text="袁女士"
        android:textColor="#212121"
        android:textSize="@dimen/base14dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base33dp"
        android:text="2019年4月16日"
        android:textColor="#888888"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/ratingbar"
        style="@style/footRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_alignLeft="@+id/tv_user_name"
        android:layout_marginTop="@dimen/base6dp"
        android:isIndicator="false"
        android:numStars="5"
        android:stepSize="2.0" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginLeft="@dimen/base105dp"
        android:layout_marginTop="@dimen/base6dp"
        android:text="10分"
        android:textColor="#888888"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_score"
        android:layout_alignLeft="@+id/tv_user_name"
        android:layout_marginTop="@dimen/base15dp"
        android:layout_marginBottom="@dimen/base20dp"
        android:text="服务很好，打扫的很干净！"
        android:textColor="#666666"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_line_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/tv_describe"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:background="#F5F5F5" />
</RelativeLayout>
