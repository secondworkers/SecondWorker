<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_bg"
    >
<LinearLayout
    android:layout_width="@dimen/base260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_bg_dialog"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/base220dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/text_black"
        android:layout_marginTop="@dimen/base11dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确认选择的社区是否正确，选择后不能更改社区！"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/base25dp"
        android:layout_marginRight="@dimen/base25dp"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/base11dp"
        android:textColor="@color/text_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="#EEE"
        android:layout_marginTop="@dimen/base15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/base45dp"
            android:layout_weight="1"
            android:text="取消选择"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#6DA0E6"
            android:clickable="true"
            android:focusable="true"/>
        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="@dimen/base45dp"
            android:background="#EEE"
            />
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/base45dp"
            android:layout_weight="1"
            android:text="确认选择"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#6DA0E6"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>