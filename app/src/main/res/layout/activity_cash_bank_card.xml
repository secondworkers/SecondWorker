<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<include layout="@layout/layout_top_title"
    android:id="@+id/include"/>
<ImageView
    android:id="@+id/tv_icon"
    android:layout_below="@+id/include"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:textSize="35sp"
    android:gravity="center"
    android:src="@mipmap/ic_apply_success"
     />

<TextView
    android:id="@+id/tv_msg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_icon"
    android:layout_marginTop="20dp"
    android:text="提现申请成功，等待平台审核"
    android:textColor="#212121"
    android:layout_centerHorizontal="true"
    android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_predict_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_msg"
        android:layout_marginTop="10dp"
        android:text="预计72小时内到账"
        android:textColor="#888888"
        android:layout_centerHorizontal="true"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_cash_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_predict_time"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:text="提现金额"
        android:textColor="#888888"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_predict_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="75dp"
        android:text="￥106.00"
        android:textColor="#212121"
        android:layout_centerHorizontal="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_cash_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cash_money"
        android:layout_marginTop="23dp"
        android:layout_alignLeft="@+id/tv_cash_money"
        android:text="提现方式"
        android:textColor="#888888"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/tv_money"
        android:text="中国建设银行（2114)"
        android:textColor="#212121"
        android:layout_centerHorizontal="true"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_finish"
        android:layout_below="@+id/tv_cash_type"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/text_white"
        android:padding="@dimen/base8dp"
        android:text="完成"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/shape_gradient_little_left_blue"/>

</RelativeLayout>