<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base18dp"
        android:layout_marginLeft="@dimen/base18dp"
        android:text="138****2019"
        android:textColor="#212121"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_phone"
        android:layout_marginLeft="@dimen/base19dp"
        android:layout_marginTop="@dimen/base10dp"
        android:text="2019-06-13"
        android:textColor="#999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_reward_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/base30dp"
        android:layout_marginRight="@dimen/base18dp"
        android:text="奖励10元"
        android:textStyle="bold"
        android:textColor="#212121"
        android:textSize="13sp" />

    <TextView
        android:layout_below="@+id/tv_date"
        android:layout_marginTop="@dimen/base18dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5" />
    
</RelativeLayout>