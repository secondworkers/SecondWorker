<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--我的发布需求-item-->

    <RelativeLayout
        android:id="@+id/rl_posting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base200dp">

        <TextView
            android:id="@+id/tv_post_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base72dp"
            android:text="发布类型:日常保洁"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_type"
            android:layout_alignLeft="@+id/tv_post_type"
            android:layout_marginTop="12dp"
            android:text="服务时间:2019年4月16日 08:00-10:00"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_post_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_service_time"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tv_post_type"
            android:text="发布内容:需要一名保洁，谢谢。"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_message"
            android:layout_alignLeft="@+id/tv_post_type"
            android:layout_marginTop="@dimen/base20dp"
            android:text="2019-04-04 15:13"
            android:textColor="#ff666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_valid_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_posting"
            android:layout_marginLeft="@dimen/base160dp"
            android:layout_toRightOf="@id/tv_post_type"
            android:layout_marginTop="@dimen/base23dp"
            android:text="有效期：3小时"

            />

        <TextView
            android:id="@+id/tv_posting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/base30dp"
            android:layout_marginRight="@dimen/base10dp"

            android:text="发布中"
            android:textColor="#ffff2727"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/base10dp"
            android:layout_marginBottom="@dimen/base10dp"
            android:text="取消发布"

            />
    </RelativeLayout>

</LinearLayout>
