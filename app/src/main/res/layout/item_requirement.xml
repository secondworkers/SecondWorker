<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white"
    android:id="@+id/rl_posting">
    <!--我的发布需求-item-->
        <com.qiaoyi.secondworker.view.CircularImageView
            android:layout_width="@dimen/base23dp"
            android:layout_height="@dimen/base23dp"
            android:id="@+id/iv_avatar"
            android:layout_marginTop="@dimen/base20dp"
            android:layout_marginLeft="@dimen/base15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_username"
            android:text="秒工保洁"
            android:textColor="@color/text_black"
            android:layout_marginTop="@dimen/base20dp"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginLeft="@dimen/base5dp"
            />
        <TextView
            android:id="@+id/tv_posting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/base20dp"
            android:layout_marginRight="@dimen/base15dp"
            android:text="发布中"
            android:textColor="#ffff2727"
            android:textSize="14sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_posting"
            android:layout_marginTop="12dp"
            android:background="#f5f5f5" />
        <TextView
            android:id="@+id/tv_post_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="发布类型:日常保洁"
            android:textColor="#ff666666"
            android:layout_below="@+id/view"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_valid_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:text="有效期：3小时"

            />
        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_type"
            android:layout_alignLeft="@+id/tv_post_type"
            android:layout_marginTop="@dimen/base13dp"
            android:text="服务时间:2019年4月16日 08:00-10:00"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_post_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_service_time"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tv_post_type"
            android:text="发布内容:需要一名保洁，谢谢。"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_post_message"
            android:layout_alignLeft="@+id/tv_post_type"
            android:layout_marginTop="@dimen/base10dp"
            android:text="2019-04-04 15:13"
            android:textColor="#ff666666"
            android:textSize="12sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_margin="@dimen/base15dp"
            android:id="@+id/view2"
            android:layout_below="@+id/tv_post_time"/>
        <Button
            android:id="@+id/button_cancel"
            android:layout_width="@dimen/base80dp"
            android:layout_height="@dimen/base30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_kuangt_grey"
            android:layout_marginRight="@dimen/base15dp"
            android:text="取消发布"
            android:layout_below="@+id/view2"
            android:textColor="@color/text_black"
            android:layout_marginBottom="@dimen/base20dp"
            />
</RelativeLayout>
