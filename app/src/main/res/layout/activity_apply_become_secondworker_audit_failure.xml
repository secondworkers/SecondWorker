<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_little_no_coners_yellow">

    <!--审核状态:审核失败-->

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/rl_audit_status"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_gradient_little_no_coners_yellow">

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="审核状态"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/view_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/iv_back_white" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_audit_failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_audit_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base30dp"
        android:src="@mipmap/ic_audit_failure" />

    <TextView
        android:id="@+id/tv_audit_failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_audit_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base95dp"
        android:text="审核失败"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_wave_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_audit_failure"
        android:layout_marginTop="@dimen/base20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_wave_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_wave_background"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base52dp">

            <TextView
                android:id="@+id/tv_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抱歉您的"
                android:textColor="#212121"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_text_1"
                android:text="审核未通过"
                android:textColor="#5654F3"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top_text"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/base55dp"
            android:layout_marginTop="@dimen/base18dp"
            android:layout_marginRight="@dimen/base55dp"
            android:text="您的信息资料有误，请核实"
            android:textColor="#888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_go_alter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base39dp"
            android:layout_below="@+id/tv_text_3"
            android:layout_marginTop="@dimen/base42dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/base98dp"
            android:layout_marginRight="@dimen/base98dp"
            android:background="@drawable/shape_bg_btn_blue"
            android:clickable="true"
            android:gravity="center"
            android:text="去修改"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>
