<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--申请成为秒工人填写服务范围页-->

    <include
        android:id="@+id/include"
        layout="@layout/layout_top_title" />

    <TextView
        android:id="@+id/tv_small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base30dp"
        android:text="第二步:填写服务范围"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_small_title"
        android:layout_marginLeft="@dimen/base16dp"
        android:layout_marginTop="@dimen/base40dp"
        android:text="所在城市"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/et_select_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_small_title"
        android:layout_marginLeft="@dimen/base33dp"
        android:layout_marginTop="@dimen/base40dp"
        android:layout_toRightOf="@+id/tv_city"
        android:background="@null"
        android:clickable="true"
        android:drawableRight="@mipmap/arrow_go"
        android:drawablePadding="@dimen/base100dp"
        android:hint="请选择您所在的城市"
        android:textColor="#888888"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/tv_city"
        android:layout_marginLeft="@dimen/base16dp"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_marginRight="@dimen/base16dp"
        android:background="#F5F5F5" />

    <TextView
        android:id="@+id/tv_enter_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_1"
        android:layout_alignLeft="@+id/tv_city"
        android:layout_marginTop="@dimen/base20dp"
        android:text="入驻范围"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/et_select_enter_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_1"
        android:layout_alignLeft="@+id/et_select_city"
        android:layout_alignRight="@+id/et_select_city"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_toRightOf="@+id/tv_enter_area"
        android:background="@null"
        android:clickable="true"
        android:drawableRight="@mipmap/arrow_go"
        android:drawablePadding="@dimen/base100dp"
        android:hint="请选择您入驻的范围"
        android:textColor="#888888"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_line_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/tv_enter_area"
        android:layout_marginLeft="@dimen/base16dp"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_marginRight="@dimen/base16dp"
        android:background="#F5F5F5" />

    <EditText
        android:id="@+id/et_input_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_2"
        android:layout_alignLeft="@+id/tv_city"
        android:layout_marginTop="@dimen/base20dp"
        android:inputType="phone"
        android:background="@null"
        android:hint="请输入手机号码"
        android:textColor="#888888"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_line_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/et_input_phone_number"
        android:layout_marginLeft="@dimen/base16dp"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_marginRight="@dimen/base16dp"
        android:background="#F5F5F5" />

    <EditText
        android:id="@+id/et_input_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_3"
        android:layout_alignLeft="@+id/tv_city"
        android:layout_marginTop="@dimen/base29dp"
        android:background="@null"
        android:hint="请输入6位验证码"
        android:textColor="#888888"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_get_code"
        android:layout_width="@dimen/base130dp"
        android:layout_height="@dimen/base34dp"
        android:layout_below="@+id/tv_line_3"
        android:layout_alignRight="@+id/et_select_city"
        android:layout_marginLeft="@dimen/base102dp"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_toRightOf="@+id/et_input_verification_code"
        android:background="@drawable/shape_bg_btn_blue"
        android:clickable="true"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_line_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/tv_get_code"
        android:layout_marginLeft="@dimen/base16dp"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_marginRight="@dimen/base16dp"
        android:background="#F5F5F5" />

    <TextView
        android:id="@+id/tv_apply_immediately"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base39dp"
        android:layout_below="@+id/tv_line_4"
        android:layout_marginTop="@dimen/base40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/base48dp"
        android:layout_marginRight="@dimen/base48dp"
        android:background="@drawable/shape_bg_btn_blue"
        android:clickable="true"
        android:gravity="center"
        android:text="立即申请"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

</RelativeLayout>
