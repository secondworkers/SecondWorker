<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.center.CancelOrderActivity">

    <!--取消订单-->

    <TextView
        android:id="@+id/tv_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/base25dp"
        android:text="您确定要取消订单吗？"
        android:textColor="#212121"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/base10dp"
        android:text="取消订单很可能收取一部分误工费"
        android:textColor="#FF0000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_reason_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_2"
       android:layout_marginLeft="@dimen/base48dp"
        android:layout_marginTop="@dimen/base31dp"
        android:text="信息填写有误，重新下单"
        android:textColor="#212121"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_reason_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reason_1"
        android:layout_alignLeft="@+id/tv_reason_1"
        android:layout_marginTop="@dimen/base23dp"
        android:text="服务人员说没时间"
        android:textColor="#212121"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/reason_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reason_2"
        android:layout_alignLeft="@+id/tv_reason_1"
        android:layout_marginTop="@dimen/base23dp"
        android:text="暂时不需要了"
        android:textColor="#212121"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_else_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reason_3"
        android:layout_alignLeft="@+id/tv_reason_1"
        android:layout_marginTop="@dimen/base23dp"
        android:text="其他原因"
        android:textColor="#212121"
        android:textSize="13sp" />

<EditText
    android:id="@+id/et_reason"
    android:layout_width="@dimen/base280dp"
    android:layout_height="@dimen/base70dp"
    android:layout_centerInParent="true"
    android:layout_below="@+id/tv_else_reason"
    android:layout_marginTop="@dimen/base15dp"
    android:hint="请输入其他取消原因"
    android:padding="12dp"
    />

    <Button
        android:id="@+id/button_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_reason"
        android:layout_marginTop="@dimen/base15dp"
        android:layout_marginLeft="@dimen/base88dp"
        android:textSize="13sp"
        android:text="确认取消"
        android:textColor="#888888"
        />
<Button
    android:id="@+id/button_think_again"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/et_reason"
   android:layout_marginLeft="@dimen/base192dp"
    android:layout_marginTop="@dimen/base15dp"
    android:text="再想想"
    android:textColor="#FFFFFF"
    android:textSize="13sp"

    />


</RelativeLayout>