<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <!--我的发布需求-->
    <include
        android:id="@+id/include"
        layout="@layout/layout_top_title"/>
    <RadioGroup
        android:id="@+id/rg_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/text_white"
        android:padding="@dimen/base10dp">
        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="全部"
            android:textColor="@drawable/selector_tab_color_radio_button"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/rb_posting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="发布中"
            android:textColor="@drawable/selector_tab_color_radio_button"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/rb_canceled"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="已取消"
            android:textColor="@drawable/selector_tab_color_radio_button"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/rb_done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@drawable/selector_tab_color_radio_button"
            android:textSize="15sp"
            />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/base5dp">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>