<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/shake_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="@dimen/base177dp"
        android:layout_height="@dimen/base177dp"
        android:layout_marginTop="@dimen/base40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_gradient_white">
        <ImageView
            android:id="@+id/iv_shake_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/shake_phone"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_goto_shake"
        android:layout_width="@dimen/base170dp"
        android:layout_height="@dimen/base44dp"
        android:text="点击摇一摇"
        android:textColor="@color/text_grey"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/base60dp"
        android:background="@drawable/shape_bg_btn_white"
        android:onClick="onShakeClick"
    />
</LinearLayout>