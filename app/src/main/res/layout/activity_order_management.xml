<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.center.OrderManagementActivity">

    <include
        android:id="@+id/include"
        layout="@layout/layout_top_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_marginTop="@dimen/base15dp">

        <ImageView
            android:id="@+id/iv_head_phone"
            android:layout_width="@dimen/base23dp"
            android:layout_height="@dimen/base23dp"
            android:layout_marginLeft="@dimen/base16dp"
            android:layout_marginTop="@dimen/base16dp"
            android:src="@mipmap/ic_headphoto" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base48dp"
            android:layout_marginTop="@dimen/base21dp"
            android:text="秒工保洁"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_non_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base319dp"
            android:layout_marginTop="@dimen/base20dp"
            android:text="待付款"
            android:textColor="#FF2727"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base1dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base54dp"
            android:layout_marginRight="@dimen/base15dp"
            android:textColor="#F5F5F5" />

        <ImageView
            android:id="@+id/iv_service_photo"
            android:layout_width="@dimen/base45dp"
            android:layout_height="@dimen/base45dp"
            android:layout_marginLeft="@dimen/base16dp"
            android:layout_marginTop="@dimen/base70dp"
            android:src="@mipmap/ic_cleaner" />

        <TextView
            android:id="@+id/tv_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base68dp"
            android:layout_marginTop="@dimen/base74dp"
            android:text="日常保洁"
            android:textColor="#212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_service_type"
            android:layout_marginLeft="@dimen/base68dp"
            android:text="2019-04-09  8:00-11:00"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_non_payment"
            android:layout_marginTop="@dimen/base75dp"
            android:text="20元/小时"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_service_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_non_payment"
            android:layout_marginTop="@dimen/base100dp"
            android:text="x3"
            android:textColor="#666666"
            android:textSize="@dimen/base13dp" />

        <TextView
            android:id="@+id/tv_service_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_non_payment"
            android:layout_marginTop="@dimen/base125dp"
            android:text="共3小时  总价60.00元"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base1dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base152dp"
            android:layout_marginRight="@dimen/base15dp"
            android:textColor="#F5F5F5" />

        <TextView
            android:id="@+id/tv_now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line_2"
            android:layout_marginTop="@dimen/base24dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:text="2019-04-04 15:13"
            android:textColor="#666666"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base167dp"
            android:layout_toLeftOf="@+id/button_2"
            android:layout_marginRight="@dimen/base10dp"
            android:text="取消订单"
            android:textColor="#333333" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_non_payment"
            android:layout_marginTop="@dimen/base167dp"
            android:text="去支付"
            android:textColor="#FF2727" />

    </RelativeLayout>


</LinearLayout>