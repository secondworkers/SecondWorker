<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_bg"
    >
    <View
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base9dp"
        android:background="#F5F5F5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/base25dp"
            android:layout_height="@dimen/base25dp"
            android:src="@mipmap/ic_headphoto"
            android:layout_marginLeft="@dimen/base16dp"
            android:layout_marginTop="@dimen/base20dp"/>
        <TextView
            android:id="@+id/tv_worker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_marginTop="@dimen/base20dp"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:text="秒工保洁"
            android:textColor="#333333"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_count_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_order_status"
            android:layout_marginEnd="@dimen/base10dp"
            android:layout_marginTop="@dimen/base20dp"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:textColor="#FF2727"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/base20dp"
            android:layout_marginRight="@dimen/base15dp"
            android:textColor="#FF2727"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base1dp"
            android:background="#F5F5F5"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_below="@+id/tv_worker_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base20dp" />
        <ImageView
            android:id="@+id/iv_service_icon"
            android:layout_width="@dimen/base45dp"
            android:layout_height="@dimen/base45dp"
            android:src="@mipmap/ic_cleaner"
            android:layout_alignTop="@+id/tv_service_type"
            android:layout_alignLeft="@+id/iv_avatar"/>

        <TextView
            android:id="@+id/tv_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line_1"
            android:layout_marginTop="@dimen/base20dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:text="日常保洁"
            android:layout_toRightOf="@+id/iv_service_icon"
            android:textColor="#212121"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_service_type"
            android:layout_marginTop="@dimen/base10dp"
            android:layout_alignStart="@id/tv_service_type"
            android:text="2019-04-09  8:00-11:00"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_order_status"
            android:layout_below="@+id/tv_line_1"
            android:layout_marginTop="@dimen/base20dp"
            android:text="20元/小时"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_service_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_order_status"
            android:layout_below="@+id/tv_service_price"
            android:layout_marginTop="@dimen/base12dp"
            android:text="x3"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_order_status"
            android:layout_below="@+id/tv_service_num"
            android:layout_marginTop="@dimen/base15dp"
            android:text="总价60.00元"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base1dp"
            android:background="#F5F5F5"
            android:layout_below="@+id/tv_total_price"
            android:layout_marginTop="@dimen/base15dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line_2"
            android:layout_marginTop="@dimen/base25dp"
           android:layout_alignLeft="@+id/iv_avatar"
            android:layout_marginBottom="@dimen/base25dp"
            android:text="2019-04-04 15:13"
            android:textColor="#666666"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line_2"
            android:layout_marginTop="@dimen/base15dp"
            android:layout_alignRight="@+id/tv_order_status">

        <TextView
            android:id="@+id/tv_btn1"
            android:layout_width="@dimen/base70dp"
            android:layout_height="@dimen/base29dp"
            android:background="@drawable/shape_gradient_all_border_grey"
            android:gravity="center"
            android:layout_marginRight="@dimen/base10dp"
            android:text="取消订单"
            android:clickable="true"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_btn2"
            android:layout_width="@dimen/base70dp"
            android:layout_height="@dimen/base29dp"
            android:background="@drawable/shape_gradient_all_border_red"
            android:gravity="center"
            android:text="去支付"
            android:clickable="true"
            android:textColor="#FF2727" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>