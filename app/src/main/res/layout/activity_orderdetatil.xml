<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base15dp"
        android:background="@drawable/shape_gradient_little_no_coners_blue"
        />
    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:layout_below="@id/view1"
        android:background="@drawable/shape_gradient_little_no_coners_blue"
        >

        <TextView
            android:id="@+id/tv_title_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"

            android:textColor="@color/text_white"
            android:textSize="18sp"
            />
        <RelativeLayout
            android:id="@+id/view_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/iv_back_white"
                />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:layout_below="@+id/rl_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base120dp"
                android:background="@drawable/shape_gradient_little_no_coners_blue">

                <com.qiaoyi.secondworker.view.CircularImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/base23dp"
                    android:layout_height="@dimen/base23dp"
                    android:layout_marginLeft="@dimen/base28dp"
                    android:layout_marginRight="@dimen/base4dp"
                    android:layout_marginTop="@dimen/base28dp" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base28dp"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:layout_toRightOf="@+id/iv_avatar"
                    android:textColor="@color/text_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_aervice_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_username"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="8dp"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <TextView
                    android:id="@+id/tv_arrive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/base15dp"
                    android:layout_marginTop="@dimen/base30dp"
                    android:textColor="@color/text_white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_marginRight="@dimen/base15dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/shape_bg_btn_white">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/base8dp"
                    android:layout_marginTop="@dimen/base15dp"
                    android:text="泰山国际大厦  9楼c-02"
                    android:textColor="@color/deep_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_username_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_address"
                    android:layout_marginBottom="@dimen/base15dp"
                    android:layout_marginStart="@dimen/base8dp"
                    android:text="秒工  186888888888"
                    android:textColor="@color/deep_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base50dp"
                android:layout_marginEnd="@dimen/base15dp"
                android:layout_marginStart="@dimen/base15dp"
                android:layout_marginTop="@dimen/base8dp"
                android:background="@drawable/shape_bg_btn_white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/base8dp"
                    android:text="服务时间"
                    android:textColor="@color/deep_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/text_grey"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base50dp"
                android:layout_marginEnd="@dimen/base15dp"
                android:layout_marginStart="@dimen/base15dp"
                android:layout_marginTop="@dimen/base8dp"
                android:background="@drawable/shape_bg_btn_white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/base8dp"
                    android:text="服务项目"
                    android:textColor="@color/deep_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/text_blue"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base15dp"
                android:layout_marginStart="@dimen/base15dp"
                android:layout_marginTop="@dimen/base8dp"
                android:background="@drawable/shape_bg_btn_white"
                android:gravity="center_vertical"
                android:padding="@dimen/base15dp">

                <TextView
                    android:id="@+id/tv_order_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账单明细"
                    android:textColor="@color/deep_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_order_detail"
                    android:layout_margin="@dimen/base15dp"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tv_single_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:text="项目单价"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_single_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view"
                    android:text="9.9元"
                    android:textColor="@color/text_red"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_single_vip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_single_price_title"
                    android:layout_marginTop="@dimen/base5dp"
                    android:text="会员卡"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_vip_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_single_price"
                    android:layout_marginTop="@dimen/base5dp"
                    android:layout_toRightOf="@id/tv_single_vip_title"
                    android:text="减9.9元"
                    android:textColor="@color/text_grey"
                    android:textSize="13sp"
                     />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_vip_discount"
                    android:layout_marginTop="@dimen/base20dp"
                    android:text="需支付 9.9元"
                    android:textColor="@color/text_red"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base15dp"
                android:layout_marginStart="@dimen/base15dp"
                android:layout_marginTop="@dimen/base8dp"
                android:background="@drawable/shape_bg_btn_white"
                android:gravity="center_vertical"
                android:padding="@dimen/base15dp">

                <TextView
                    android:id="@+id/tv_order_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单信息"
                    android:textColor="@color/deep_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_order_msg"
                    android:layout_margin="@dimen/base15dp"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tv_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view2"
                    android:text="订单编号："
                    android:textColor="@color/text_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view2"
                    android:layout_toRightOf="@+id/tv_order_title"
                    android:text="3729251111145"
                    android:textColor="@color/deep_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_order_copy_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view2"
                    android:layout_marginLeft="@dimen/base10dp"
                    android:layout_toRightOf="@+id/tv_order_id"
                    android:text="复制"
                    android:textColor="@color/text_blue"
                    android:textSize="13sp"

                    />

                <TextView
                    android:id="@+id/tv_order_create_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_copy_id"
                    android:layout_marginTop="@dimen/base5dp"
                    android:text="创建时间："
                    android:textColor="@color/text_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_id"
                    android:layout_marginTop="@dimen/base5dp"
                    android:layout_toRightOf="@+id/tv_order_create_time_title"
                    android:text="2019-04-11  15:31:20"
                    android:textColor="@color/deep_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_order_pay_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_create_time_title"
                    android:layout_marginTop="@dimen/base5dp"
                    android:text="支付时间："
                    android:textColor="@color/text_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_create_time_title"
                    android:layout_marginTop="@dimen/base5dp"
                    android:layout_toRightOf="@+id/tv_order_pay_time_title"
                    android:text="2019-04-11  15:31:20"
                    android:textColor="@color/deep_black"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/tv_order_finish_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_pay_time_title"
                    android:layout_marginTop="@dimen/base5dp"
                    android:text="完成时间："
                    android:textColor="@color/text_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_pay_time_title"
                    android:layout_marginTop="@dimen/base5dp"
                    android:layout_toRightOf="@+id/tv_order_finish_time_title"
                    android:text="2019-04-11  15:31:20"
                    android:textColor="@color/deep_black"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/base10dp"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/tv_left_btn"
            android:layout_width="@dimen/base135dp"
            android:layout_height="@dimen/base40dp"
            android:text="删除订单"
            android:textColor="@color/text_grey"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/shape_kuang_bigcorners_grey"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tv_right_btn"
            android:layout_toRightOf="@+id/tv_left_btn"
            android:layout_width="@dimen/base135dp"
            android:layout_height="@dimen/base40dp"
            android:background="@drawable/shape_gradient_lr_blue"
            android:text="联系他"
            android:textColor="@color/text_white"
            android:layout_marginLeft="@dimen/base15dp"
            android:textSize="13sp"
            android:gravity="center"
            android:clickable="true"
            />
    </RelativeLayout>
</RelativeLayout>