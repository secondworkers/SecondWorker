<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base100dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="18dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/shape_bg_btn_white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_bank"
        android:layout_width="@dimen/base80dp"
        android:layout_height="@dimen/base36dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/ic_bank_card" />

    <TextView
        android:id="@+id/tv_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_bank"
        android:textStyle="bold"
        android:text="中国工商银行"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_bank_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_bank"
        android:layout_alignLeft="@+id/iv_bank"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/text_grey"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/iv_bank_background"
        android:layout_width="@dimen/base80dp"
        android:layout_height="@dimen/base40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_marginEnd="29dp"
         />

</RelativeLayout>