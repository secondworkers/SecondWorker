<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_scan_code"
            android:layout_width="@dimen/base133dp"
            android:layout_height="@dimen/base133dp"
            android:layout_marginTop="@dimen/base16dp"
            android:layout_marginLeft="@dimen/base16dp"
            android:layout_marginRight="@dimen/base16dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_scan_code_invitation" />

        <TextView
            android:id="@+id/tv_text_1"
            android:layout_below="@+id/iv_scan_code"
            android:layout_marginTop="@dimen/base13dp"
           android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="扫一扫下载app" />

        <TextView
            android:id="@+id/tv_text_2"
            android:layout_below="@+id/tv_text_1"
            android:layout_marginTop="@dimen/base8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/base16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text=" 别忘记告诉朋友填写邀请码" />

    </RelativeLayout>

    <ImageView
        android:layout_below="@+id/rl_top"
        android:layout_marginTop="@dimen/base15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_x"/>

</RelativeLayout>