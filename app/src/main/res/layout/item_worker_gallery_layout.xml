<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base140dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/ll_case"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_goto_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base10dp"
            >
            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="@dimen/base50dp"
                android:layout_height="@dimen/base50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_user_avatar"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_user_name"
                    android:text="东北大菠萝东北大菠萝东北大菠萝"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/base10dp"
                    android:textColor="@color/text_black"
                    android:maxLength="5"
                    android:ellipsize="end"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_user_title"
                    android:text="东北大菠萝东北大菠萝东北大菠萝"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/base7dp"
                    android:textColor="@color/text_grey"
                    android:layout_toRightOf="@+id/tv_user_name"
                    android:maxLength="5"
                    android:ellipsize="end"
                    />
                <RatingBar
                    android:id="@+id/ratingbar"
                    style="@style/footRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:layout_marginTop="@dimen/base5dp"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_marginLeft="@dimen/base10dp"/>
                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10分"
                    android:textColor="#888888"
                    android:layout_toRightOf="@+id/ratingbar"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_marginTop="@dimen/base5dp"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/base10dp"
                android:layout_marginRight="@dimen/base15dp">
                <TextView
                    android:id="@+id/tv_goto"
                    android:layout_width="@dimen/base80dp"
                    android:layout_height="@dimen/base30dp"
                    android:text="去预约"
                    android:textColor="@color/text_white"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:background="@drawable/shape_gradient_little_left_blue"
                    />
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2km"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_goto"
                    android:drawableLeft="@mipmap/card_location"
                    android:drawablePadding="@dimen/base3dp"
                    android:layout_marginTop="@dimen/base10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_worker_description"
            android:lines="2"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            android:text="我叫小秒，从事保洁行业6年，有丰富的保洁经验， 获得金牌保洁称号。"/>
    </LinearLayout>
</android.support.v7.widget.CardView>